# ========================================
# ArcPilot Environment Configuration
# ========================================

# ----------------------------------------
# Arc Blockchain
# ----------------------------------------
ARC_RPC_URL=https://testnet-rpc.arcblockchain.com
ARC_CHAIN_ID=12345
ARC_EXPLORER_URL=https://testnet-explorer.arcblockchain.com
USDC_CONTRACT_ADDRESS=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238

# ----------------------------------------
# Thirdweb
# ----------------------------------------
THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# ----------------------------------------
# ElevenLabs Voice AI
# ----------------------------------------
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MODEL_ID=eleven_monolingual_v1

# ----------------------------------------
# Circle CCTP (Cross-Chain Transfer Protocol)
# ----------------------------------------
CCTP_CONTRACT_ADDRESS=0x...
CCTP_MESSAGE_TRANSMITTER=0x...

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DATABASE_URL=postgresql://arcpilot:arcpilot_password@localhost:5432/arcpilot
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=arcpilot
DATABASE_USER=arcpilot
DATABASE_PASSWORD=arcpilot_password
DATABASE_MAX_CONNECTIONS=10

# ----------------------------------------
# Redis
# ----------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ----------------------------------------
# Kafka
# ----------------------------------------
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_OPPORTUNITIES=opportunities
KAFKA_TOPIC_TRADES=trades
KAFKA_TOPIC_PRICES=prices
KAFKA_GROUP_ID=arcpilot

# ----------------------------------------
# API Gateway
# ----------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ----------------------------------------
# AI Engine
# ----------------------------------------
AI_ENGINE_HOST=0.0.0.0
AI_ENGINE_PORT=8081
AI_MODEL_PATH=/app/models
DETECTION_INTERVAL_MS=1000
MIN_PROFIT_THRESHOLD=0.001
MAX_RISK_SCORE=0.7

# ----------------------------------------
# Blockchain Executor
# ----------------------------------------
EXECUTOR_HOST=0.0.0.0
EXECUTOR_PORT=8082
GAS_PRICE_MULTIPLIER=1.2
MAX_GAS_PRICE_GWEI=100
SLIPPAGE_TOLERANCE=0.005

# ----------------------------------------
# Frontend
# ----------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_CHAIN_ID=12345
NEXT_PUBLIC_ENABLE_VOICE=true

# ----------------------------------------
# Security
# ----------------------------------------
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=30
BCRYPT_ROUNDS=12

# ----------------------------------------
# Features
# ----------------------------------------
ENABLE_VOICE_AGENT=true
ENABLE_CROSS_CHAIN=true
ENABLE_ML_TRAINING=true
ENABLE_METRICS=true

# ----------------------------------------
# Monitoring & Logging
# ----------------------------------------
LOG_LEVEL=info
RUST_LOG=info,ai_engine=debug,blockchain_executor=debug,api_gateway=debug
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ----------------------------------------
# Risk Management
# ----------------------------------------
DAILY_LOSS_LIMIT_USD=1000
MAX_POSITION_SIZE_USD=10000
MAX_TRADE_SIZE_USD=5000
CIRCUIT_BREAKER_LOSS_THRESHOLD=0.05

# ----------------------------------------
# Development
# ----------------------------------------
NODE_ENV=development
RUST_BACKTRACE=1

# ----------------------------------------
# Testing
# ----------------------------------------
TEST_WALLET_ADDRESS=0x...
TEST_WALLET_PRIVATE_KEY=0x...
USE_TESTNET=true

